<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/cvBusRoutesItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        app:cardCornerRadius="@dimen/spacing_small"
        app:cardElevation="@dimen/card_shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rlBookingPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginBottom="-15dp">

                <LinearLayout
                    android:id="@+id/llWhImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/spacing_medium"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivWhImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_square_box"
                        android:backgroundTint="@color/darkgreen"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_bus"
                        app:tint="@color/white"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/googlesansregular"
                        android:paddingTop="@dimen/spacing_small"
                        android:textColor="@color/textchild"
                        android:textSize="@dimen/textsize_12sp"
                        tools:text="@string/txt_date"  />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:layout_toEndOf="@+id/llWhImg"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginRight="@dimen/spacing_medium"
                        android:layout_toLeftOf="@+id/tvAmount"
                        android:singleLine="true"
                        android:fontFamily="@font/googlesansregular"
                        android:text="@string/lbl_payment"
                        android:textColor="@color/textheader"
                        android:textSize="@dimen/font_large" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginRight="@dimen/spacing_medium"
                        android:fontFamily="@font/googlesansbold"
                        android:singleLine="true"
                        android:text="â‚¹0.0"
                        android:textColor="@color/textheader"
                        android:textSize="@dimen/font_mlarge" />

                    <TextView
                        android:id="@+id/tvPaymentMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTitle"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center_vertical"
                        android:text="Mode : "
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/font_medium" />

                    <ImageView
                        android:id="@+id/imPaymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTitle"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:gravity="end"
                        android:src="@drawable/ic_checkbox_circle_line" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlBookingPayment"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/_8sdp">

                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:ellipsize="end"
                    android:fontFamily="@font/googlesansbold"
                    android:maxLines="2"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_large"
                    tools:text="@string/text_destination" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDestination"
                    android:fontFamily="@font/googlesansregular"
                    android:paddingTop="@dimen/spacing_small"
                    android:paddingBottom="@dimen/spacing_small"
                    android:textColor="@color/textchild"
                    tools:text="@string/txt_date"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvConfirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDestination"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/googlesansregular"
                    android:gravity="center_vertical"
                    android:text="@string/text_confirmed"
                    android:textColor="@color/color_check" />

                <LinearLayout
                    android:id="@+id/layBusDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDuration"
                    android:layout_marginTop="-5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/googlesansregular"
                            android:paddingEnd="@dimen/spacing_medium"
                            android:text="@string/text_bus_no"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:fontFamily="@font/googlesansregular"
                            android:text="@string/txtColon"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:id="@+id/tvBusNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:fontFamily="@font/googlesansbold"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:textColor="@color/endcolor"
                            android:textSize="@dimen/font_medium" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/googlesansregular"
                            android:paddingEnd="@dimen/spacing_medium"
                            android:text="@string/txt_bus_name"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:fontFamily="@font/googlesansregular"
                            android:text="@string/txtColon"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:id="@+id/tvBusName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:fontFamily="@font/googlesansbold"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:textColor="@color/endcolor"
                            android:textSize="@dimen/font_medium" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_BusPasses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/googlesansregular"
                            android:paddingEnd="@dimen/spacing_medium"
                            android:text="@string/text_pass"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:fontFamily="@font/googlesansregular"
                            android:text="@string/txtColon"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:id="@+id/tvBusPasses"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:fontFamily="@font/googlesansbold"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:textColor="@color/endcolor"
                            android:textSize="@dimen/font_medium" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvViewPassesDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border"
                        android:layout_gravity="end"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center_vertical"
                        android:text="@string/txt_view_all"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/ivShowMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layBusDetails"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/txt_todo"
                    android:padding="@dimen/spacing_xsmall"
                    android:visibility="visible"
                    android:src="@drawable/ic_keyboard_arrow_down_black" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlShowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlContent"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/llTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="@color/app_background">

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/googlesansbold"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:textColor="@color/textchild"
                        android:textSize="@dimen/font_mlarge"
                        tools:text="@string/lbl_booking_starttime1" />

                    <View
                        android:id="@+id/vDivider"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/llMIddle"
                        android:layout_toEndOf="@+id/tvStartTime"
                        android:background="@color/view_color" />

                    <LinearLayout
                        android:id="@+id/llMIddle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_small">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:contentDescription="@string/txt_todo"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_bus"
                            app:tint="@color/endcolor" />

                        <TextView
                            android:id="@+id/tvTotalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="bottom"
                            android:textColor="@color/textchild"
                            android:textSize="@dimen/font_medium"
                            tools:text="@string/txt_totalhour" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tvEndTime"
                        android:layout_toEndOf="@+id/llMIddle"
                        android:background="@color/view_color" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/googlesansbold"
                        android:gravity="end"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:textColor="@color/textchild"
                        android:textSize="@dimen/font_mlarge"
                        tools:text="@string/txt_time" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llTime">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesansregular"
                                android:paddingStart="@dimen/spacing_medium"
                                android:paddingEnd="@dimen/spacing_medium"
                                android:text="@string/text_seat_no"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_medium" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/googlesansregular"
                                android:text="@string/txtColon"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_medium" />

                            <TextView
                                android:id="@+id/tvSeatNo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.5"
                                android:fontFamily="@font/googlesansregular"
                                android:paddingStart="@dimen/spacing_small"
                                android:paddingEnd="@dimen/spacing_small"
                                android:textColor="@color/endcolor"
                                android:textSize="@dimen/font_medium"
                                tools:text="@string/lbl_booking_SeatNo1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesansregular"
                                android:paddingStart="@dimen/spacing_medium"
                                android:paddingEnd="@dimen/spacing_medium"
                                android:text="@string/lbl_pnr_no"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_medium" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/googlesansregular"
                                android:text="@string/txtColon"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_medium" />

                            <TextView
                                android:id="@+id/tvPNRNo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.5"
                                android:fontFamily="@font/googlesansregular"
                                android:paddingStart="@dimen/spacing_small"
                                android:paddingEnd="@dimen/spacing_small"
                                android:textColor="@color/endcolor"
                                android:textSize="@dimen/font_medium"
                                tools:text="@string/lbl_booking_pnr1" />
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>


                <ImageView
                    android:id="@+id/ivShowLess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llDescription"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/txt_todo"
                    android:padding="@dimen/spacing_small"
                    android:src="@drawable/ic_keyboard_arrow_up_black" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>