<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@drawable/bg_toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        android:theme="@style/Toolbar"
        app:contentInsetStart="0dp"
        app:titleTextColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/txt_todo"
                android:padding="@dimen/spacing_medium"
                android:src="@drawable/ic_left_arrow_white" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_toStartOf="@id/ivAdd"
                android:layout_toEndOf="@+id/ivBack"
                android:fontFamily="@font/googlesansextrabold"
                android:text="@string/lbl_reminder"
                android:textColor="@color/white"
                android:textSize="@dimen/font_mlarge" />

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/txt_todo"
                android:padding="@dimen/spacing_medium"
                android:src="@drawable/ic_add_circle_line"
                android:tint="@color/white"
                android:visibility="gone" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_above="@+id/btnSetReminder"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/bg_card"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardCornerRadius="@dimen/spacing_small"
                    app:cardElevation="@dimen/card_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xxsmall"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:drawableStart="@drawable/ic_bus"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:fontFamily="@font/googlesansbold"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/text_bus_information"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_large" />


                        <LinearLayout
                            android:id="@+id/llOffer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDate"
                            android:layout_marginBottom="@dimen/spacing_medium"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:orientation="vertical"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/ivBus"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center_vertical"
                                    android:contentDescription="@string/txt_todo"
                                    android:src="@drawable/ic_bus"
                                    android:tint="@color/colorPrimary"
                                    android:visibility="gone" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="left|center"
                                    android:maxLines="2"
                                    android:text="Bus Number"
                                    android:textColor="@color/textcolor"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tvBusNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="left|center"
                                    android:text="DL15A8585"
                                    android:textColor="@color/textheader"
                                    android:textSize="18dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:orientation="vertical"
                                android:padding="8dp">


                                <TextView
                                    android:id="@+id/car_no_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1"
                                    android:gravity="left|center"
                                    android:text="Driver Name"
                                    android:textColor="@color/textheader"
                                    android:textSize="14dp" />


                                <TextView
                                    android:id="@+id/car_name_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_phone_24"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="left|center"
                                    android:maxLines="2"
                                    android:text="9876543210"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardCornerRadius="@dimen/spacing_small"
                    app:cardElevation="@dimen/card_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:fontFamily="@font/googlesansbold"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/text_your_pickup_loca"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_large" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- <Spinner
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:background="@drawable/bg_rounded_border_edittext"
                                 android:layout_marginStart="@dimen/spacing_medium"
                                 android:layout_marginEnd="@dimen/spacing_medium"
                                 android:layout_marginTop="@dimen/spacing_medium"
                                 android:layout_marginBottom="@dimen/spacing_medium"
                                 android:padding="@dimen/spacing_large"
                                 />-->

                            <EditText
                                android:id="@+id/edHolderName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:layout_marginEnd="@dimen/spacing_medium"
                                android:layout_marginBottom="@dimen/spacing_medium"
                                android:background="@drawable/bg_rounded_border_edittext"
                                android:fontFamily="@font/googlesansregular"
                                android:hint="@string/text_select_stop"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="@dimen/spacing_medium"
                                android:textColor="@color/textchild"
                                android:textSize="@dimen/font_large" />


                        </RelativeLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardCornerRadius="@dimen/spacing_small"
                    app:cardElevation="@dimen/card_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:fontFamily="@font/googlesansbold"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/text_remind_me"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_large" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:scrollbars="none">

                            <RadioGroup
                                android:id="@+id/radioGroupBookingType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_8sdp"
                                android:background="@drawable/radio_border"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioBtn5min"
                                    style="@style/MyRadioButtonLeft"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:text="5 min"
                                    android:textSize="14sp" />

                                <RadioButton
                                    android:id="@+id/radioBtn10min"
                                    style="@style/MyRadioButton"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="10 min"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <RadioButton
                                    android:id="@+id/radioBtn15min"
                                    style="@style/MyRadioButton"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="15 min"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <RadioButton
                                    android:id="@+id/radioBtn20min"
                                    style="@style/MyRadioButton"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="20 min"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <RadioButton
                                    android:id="@+id/radioBtn30min"
                                    style="@style/MyRadioButtonRight"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="30 min"
                                    android:textSize="14sp" />
                            </RadioGroup>



                        </HorizontalScrollView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    app:cardCornerRadius="@dimen/spacing_small"
                    app:cardElevation="@dimen/card_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:fontFamily="@font/googlesansbold"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:text="@string/text_remind_me_on"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_large" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:scrollbars="none">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_medium"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_small"
                                    android:background="@drawable/bg_square_text"
                                    android:fontFamily="@font/googlesansbold"
                                    android:paddingStart="@dimen/spacing_medium"
                                    android:paddingTop="@dimen/spacing_small"
                                    android:paddingEnd="@dimen/spacing_medium"
                                    android:paddingBottom="@dimen/spacing_small"
                                    android:text="SUN"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_small"
                                    android:background="@drawable/bg_square_text"
                                    android:fontFamily="@font/googlesansbold"
                                    android:paddingStart="@dimen/spacing_medium"
                                    android:paddingTop="@dimen/spacing_small"
                                    android:paddingEnd="@dimen/spacing_medium"
                                    android:paddingBottom="@dimen/spacing_small"
                                    android:text="MUN"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_small"
                                    android:background="@drawable/bg_square_text"
                                    android:fontFamily="@font/googlesansbold"
                                    android:paddingStart="@dimen/spacing_medium"
                                    android:paddingTop="@dimen/spacing_small"
                                    android:paddingEnd="@dimen/spacing_medium"
                                    android:paddingBottom="@dimen/spacing_small"
                                    android:text="TUE"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_small"
                                    android:background="@drawable/bg_square_text"
                                    android:fontFamily="@font/googlesansbold"
                                    android:paddingStart="@dimen/spacing_medium"
                                    android:paddingTop="@dimen/spacing_small"
                                    android:paddingEnd="@dimen/spacing_medium"
                                    android:paddingBottom="@dimen/spacing_small"
                                    android:text="WED"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_small"
                                    android:background="@drawable/bg_square_text"
                                    android:fontFamily="@font/googlesansbold"
                                    android:paddingStart="@dimen/spacing_medium"
                                    android:paddingTop="@dimen/spacing_small"
                                    android:paddingEnd="@dimen/spacing_medium"
                                    android:paddingBottom="@dimen/spacing_small"
                                    android:text="THE"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_small"
                                    android:background="@drawable/bg_square_text"
                                    android:fontFamily="@font/googlesansbold"
                                    android:paddingStart="@dimen/spacing_medium"
                                    android:paddingTop="@dimen/spacing_small"
                                    android:paddingEnd="@dimen/spacing_medium"
                                    android:paddingBottom="@dimen/spacing_small"
                                    android:text="FRI"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_small"
                                    android:background="@drawable/bg_square_text"
                                    android:fontFamily="@font/googlesansbold"
                                    android:paddingStart="@dimen/spacing_medium"
                                    android:paddingTop="@dimen/spacing_small"
                                    android:paddingEnd="@dimen/spacing_medium"
                                    android:paddingBottom="@dimen/spacing_small"
                                    android:text="SAT"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_medium" />


                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>




            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <Button
            android:id="@+id/btnSetReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:background="@drawable/bg_btn_shape"
            android:fontFamily="@font/googlesansbold"
            android:text="@string/text_set_reminder"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />

</RelativeLayout>