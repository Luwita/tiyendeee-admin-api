<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/googlesansregular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_backspace_black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/googlesansregular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_backspace_black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    /* Rating bar theme */
    <style name="RatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/rating</item>
        <item name="colorControlActivated">@color/rating</item>
    </style>

    /* Toolbar theme */
    <style name="Toolbar">
        <item name="android:fontFamily">@font/googlesansextrabold</item>
    </style>

    /* Dialog animation */
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_bottom</item>
    </style>

    /* bottom navigation theme */
    <style name="bottomnavigation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MyRadioButton"> // for center options
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_text_custom_mode</item>
        <item name="android:background">@drawable/radio_background_custom_mode</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyCheckButtonButton"> // for center options
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_text_custom_mode</item>
        <item name="android:background">@drawable/checkbox_selector</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyRadioButtonLeft" parent="MyRadioButton"> // for left options
        <item name="android:background">@drawable/radio_background_custom_mode_left</item>
    </style>

    <style name="MyRadioButtonRight" parent="MyRadioButton">  // for right options
        <item name="android:background">@drawable/radio_background_custom_mode_right</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
