<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/round_gradient"
    android:elevation="10dp"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgCancel"
        android:ellipsize="end"
        android:fontFamily="@font/googlesansbold"
        android:gravity="center|left"
        android:maxLines="2"
        android:padding="5dp"
        android:text="Set Reminder"
        android:textColor="@color/textheader"
        android:textSize="@dimen/font_large" />

    <ImageView
        android:id="@+id/imgCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center|top"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="screen"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_round_cancel_24px" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgCancel"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xxsmall"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:drawableStart="@drawable/ic_bus"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:fontFamily="@font/googlesansbold"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingEnd="@dimen/spacing_small"
                        android:text="@string/text_bus_information"
                        android:textColor="@color/textheader"
                        android:textSize="@dimen/font_medium" />


                    <LinearLayout
                        android:id="@+id/llOffer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDate"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:orientation="vertical"
                            android:padding="8dp">


                            <ImageView
                                android:id="@+id/ivBus"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/txt_todo"
                                android:src="@drawable/ic_bus"
                                android:tint="@color/colorPrimary"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="left|center"
                                android:maxLines="2"
                                android:text="Bus Number"
                                android:textColor="@color/textcolor"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tvBusNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="left|center"
                                android:text="DL15A8585"
                                android:textColor="@color/textheader"
                                android:textSize="18dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:orientation="vertical"
                            android:padding="8dp">


                            <TextView
                                android:id="@+id/car_no_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Driver Name"
                                android:textColor="@color/textheader"
                                android:textSize="14dp" />


                            <TextView
                                android:id="@+id/car_name_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_phone_24"
                                android:drawablePadding="@dimen/_5sdp"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="left|center"
                                android:maxLines="2"
                                android:text="9876543210"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16dp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:elevation="@dimen/_5sdp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:fontFamily="@font/googlesansbold"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingEnd="@dimen/spacing_small"
                        android:text="@string/text_your_pickup_loca"
                        android:textColor="@color/textheader"
                        android:textSize="@dimen/font_large" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- <Spinner
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:background="@drawable/bg_rounded_border_edittext"
                             android:layout_marginStart="@dimen/spacing_medium"
                             android:layout_marginEnd="@dimen/spacing_medium"
                             android:layout_marginTop="@dimen/spacing_medium"
                             android:layout_marginBottom="@dimen/spacing_medium"
                             android:padding="@dimen/spacing_large"
                             />-->

                        <EditText
                            android:id="@+id/edHolderName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:layout_marginBottom="@dimen/spacing_medium"
                            android:background="@drawable/bg_rounded_border_edittext"
                            android:fontFamily="@font/googlesansregular"
                            android:hint="@string/text_select_stop"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/spacing_medium"
                            android:textColor="@color/textchild"
                            android:textSize="@dimen/font_large" />


                    </RelativeLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:fontFamily="@font/googlesansbold"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingEnd="@dimen/spacing_small"
                        android:text="@string/text_remind_me"
                        android:textColor="@color/textheader"
                        android:textSize="@dimen/font_medium" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbars="none">

                        <RadioGroup
                            android:id="@+id/rgReminderTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_8sdp"
                            android:background="@drawable/radio_border"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/radioBtn10min"
                                style="@style/MyRadioButtonLeft"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:checked="true"
                                android:gravity="center"
                                android:text="10 min"
                                android:textSize="14sp"
                                android:visibility="visible" />


                            <RadioButton
                                android:id="@+id/radioBtn20min"
                                style="@style/MyRadioButton"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="20 min"
                                android:textSize="14sp"
                                android:visibility="visible" />


                            <RadioButton
                                android:id="@+id/radioBtn30min"
                                style="@style/MyRadioButton"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="30 min"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/radioBtn1hr"
                                style="@style/MyRadioButtonRight"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="1 hr"
                                android:textSize="14sp"
                                android:visibility="visible" />
                        </RadioGroup>


                    </HorizontalScrollView>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:fontFamily="@font/googlesansbold"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingEnd="@dimen/spacing_small"
                        android:text="@string/text_remind_me_on"
                        android:textColor="@color/textheader"
                        android:textSize="@dimen/font_medium" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbars="none"
                        android:layout_margin="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_small"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center|left">

                            <CheckBox
                                android:id="@+id/chkMon"
                                style="@style/MyCheckButtonButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="MON" />

                            <CheckBox
                                android:id="@+id/chkTue"
                                style="@style/MyCheckButtonButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="TUE" />

                            <CheckBox
                                android:id="@+id/chkWed"
                                style="@style/MyCheckButtonButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="WED" />

                            <CheckBox
                                android:id="@+id/chkThu"
                                style="@style/MyCheckButtonButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="THU" />

                            <CheckBox
                                android:id="@+id/chkFri"
                                style="@style/MyCheckButtonButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="FRI" />

                            <CheckBox
                                android:id="@+id/chkSat"
                                style="@style/MyCheckButtonButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="SAT" />

                            <CheckBox
                                android:id="@+id/chkSun"
                                style="@style/MyCheckButtonButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="SUN" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btnSetReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/spacing_medium"
                android:background="@drawable/bg_btn_shape"
                android:fontFamily="@font/googlesansbold"
                android:text="@string/text_set_reminder"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>