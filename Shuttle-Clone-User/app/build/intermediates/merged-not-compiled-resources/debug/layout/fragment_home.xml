<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_height"
        android:background="@drawable/bg_toolbar" />

    <ProgressBar
        android:id="@+id/pbLoadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_margin="@dimen/_5sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="top"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center|top">

            <androidx.cardview.widget.CardView
                android:id="@+id/radioLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RadioGroup
                    android:id="@+id/radioGroupBookingType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/radio_border"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioBtnOneWay"
                        style="@style/MyRadioButtonLeft"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:gravity="center"
                        android:text="Instant Ride"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radioBtnRentals"
                        style="@style/MyRadioButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Rentals"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <RadioButton
                        android:id="@+id/radioBtnOfficeRide"
                        style="@style/MyRadioButtonRight"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Office Ride"
                        android:textSize="14sp" />
                </RadioGroup>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvlayOneWayRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/spacing_small"
                app:cardElevation="@dimen/card_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:fontFamily="@font/googlesansregular"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_xsmall">

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ivFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/txt_todo"
                                android:src="@drawable/bg_select_stepper" />

                            <View
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/img_icon"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_dotted" />

                            <ImageView
                                android:id="@+id/ivTo"
                                android:layout_width="@dimen/img_icon"
                                android:layout_height="@dimen/img_icon"
                                android:contentDescription="@string/txt_todo"
                                android:src="@drawable/ic_map_pin_2_line"
                                android:tint="@color/colorPrimary" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:layout_toEndOf="@id/ll1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/ivSwap"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/edFromCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/googlesansregular"
                                    android:gravity="center_vertical"
                                    android:hint="@string/hint_pickup_location"
                                    android:inputType="none"
                                    android:padding="@dimen/spacing_medium"
                                    android:singleLine="true"
                                    android:textColor="@color/textchild"
                                    android:textSize="@dimen/font_large" />

                                <View
                                    android:id="@+id/view2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0.2dp"
                                    android:background="@color/view_color" />

                                <TextView
                                    android:id="@+id/edToCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:backgroundTint="@color/white"
                                    android:drawablePadding="@dimen/margin_32dp"
                                    android:fontFamily="@font/googlesansregular"
                                    android:gravity="center_vertical"
                                    android:hint="@string/hint_drop_location"
                                    android:imeOptions="actionSearch"
                                    android:inputType="none"
                                    android:padding="@dimen/spacing_medium"
                                    android:singleLine="true"
                                    android:textColor="@color/textchild"
                                    android:textSize="@dimen/font_large" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivSwap"
                                android:layout_width="@dimen/spacing_mlarge"
                                android:layout_height="@dimen/spacing_mlarge"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_circle_shape"
                                android:contentDescription="@string/txt_todo"
                                android:elevation="@dimen/spacing_xsmall"
                                android:padding="@dimen/spacing_6dp"
                                android:src="@drawable/ic_pin_distance_line"
                                android:tint="@color/white" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/viewheight"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:background="@color/view_color"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btnFindInstantRoute"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/spacing_medium"
                        android:background="@drawable/bg_btn_shape"
                        android:fontFamily="@font/googlesansbold"
                        android:text="Find Route"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_large" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvAc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackgroundBorderless"
                            android:drawableTop="@drawable/ic_snowflake_shape"
                            android:drawablePadding="@dimen/spacing_small"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center"
                            android:padding="@dimen/spacing_small"
                            android:text="@string/lbl_ac"
                            android:textColor="@color/textchild"
                            android:textSize="@dimen/font_small" />

                        <TextView
                            android:id="@+id/tvNonAc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:drawableTop="@drawable/ic_nonac"
                            android:drawablePadding="@dimen/spacing_small"
                            android:focusable="true"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center"
                            android:padding="@dimen/spacing_small"
                            android:text="@string/lbl_non_ac"
                            android:textColor="@color/textchild"
                            android:textSize="@dimen/font_small" />

                        <TextView
                            android:id="@+id/tvSleeper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:drawableTop="@drawable/ic_hotel_bed_line"
                            android:drawablePadding="@dimen/spacing_small"
                            android:focusable="true"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center"
                            android:padding="@dimen/spacing_small"
                            android:text="@string/lbl_sleeper"
                            android:textColor="@color/textchild"
                            android:textSize="@dimen/font_small" />

                        <TextView
                            android:id="@+id/tvSeater"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:drawableTop="@drawable/ic_seater"
                            android:drawablePadding="@dimen/spacing_small"
                            android:focusable="true"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center"
                            android:padding="@dimen/spacing_small"
                            android:text="@string/lbl_seater"
                            android:textColor="@color/textchild"
                            android:textSize="@dimen/font_small" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvlayOfficeRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/spacing_small"
                app:cardElevation="@dimen/card_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:fontFamily="@font/googlesansregular"
                    android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/googlesansbold"
                                    android:gravity="center"
                                    android:padding="@dimen/_2sdp"
                                    android:textColor="@color/textheader"
                                    android:textSize="@dimen/font_medium"
                                    android:drawableTint="@color/colorPrimary"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:drawableLeft="@drawable/ic_location_24"
                                    android:text="Pick Up" />


                                <TextView
                                    android:id="@+id/tvHomeAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_dot"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/green"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:padding="@dimen/_5sdp"
                                    android:hint="PickUp Point"
                                    android:textColor="@color/textheader"
                                    android:textSize="14sp" />


                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@color/black"
                                android:visibility="gone"/>

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fabSwipeAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fabSize="mini"
                                android:src="@drawable/swap_horizontal"
                                app:backgroundTint="@color/white"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/googlesansbold"
                                    android:gravity="center"
                                    android:padding="@dimen/_2sdp"
                                    android:textColor="@color/textheader"
                                    android:textSize="@dimen/font_medium"
                                    android:drawableTint="@color/colorPrimary"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:drawableLeft="@drawable/ic_location_24"
                                    android:text="Drop off" />


                                <TextView
                                    android:id="@+id/tvOfficeAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_dot"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/red"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:padding="@dimen/_5sdp"
                                    android:hint="Drop Point"
                                    android:textColor="@color/textheader"
                                    android:textSize="14sp" />


                            </LinearLayout>

                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_medium"
                            android:drawableTint="@color/colorPrimary"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_time_24"
                            android:text="Office Timing" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:layout_marginEnd="@dimen/spacing_medium">

                            <TextView
                                android:id="@+id/tvLeavingHomeAt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center|left"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:hint="09:00 AM"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/font_medium" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center"
                                android:text="  to  "
                                android:singleLine="true"
                                android:textSize="@dimen/font_medium" />
                            <TextView
                                android:id="@+id/tvLeavingOfficeAt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center|right"
                                android:ellipsize="end"
                                android:hint="06:00 PM"
                                android:focusable="true"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/font_medium" />
                        </LinearLayout>



                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkboxBookReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Book return seat for the same."
                        android:layout_margin="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:fontFamily="@font/googlesansbold"/>


                    <Button
                        android:id="@+id/btnfindRoutes"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/spacing_medium"
                        android:background="@drawable/bg_btn_shape"
                        android:fontFamily="@font/googlesansbold"
                        android:text="Find Route"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_large" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@color/white"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/spacing_small"
                app:cardElevation="@dimen/card_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llOneWay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:fontFamily="@font/googlesansregular"
                            android:padding="@dimen/spacing_small"
                            android:text="@string/text_when_you_want_to_go"
                            android:textColor="@color/textchild"
                            android:textSize="@dimen/font_large" />

                        <TextView
                            android:id="@+id/edOneWay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:background="@null"
                            android:drawableStart="@drawable/ic_calendar_event_line"
                            android:drawablePadding="@dimen/spacing_medium"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center_vertical"
                            android:paddingTop="@dimen/spacing_small"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_large" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/img_icon"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_xsmall">

                        <ImageView
                            android:id="@+id/ivDescrease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/txt_todo"
                            android:padding="@dimen/spacing_xsmall"
                            android:src="@drawable/ic_arrow_drop_up_black_24dp"
                            android:tint="@color/textchild" />

                        <TextView
                            android:id="@+id/tvCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:drawableStart="@drawable/ic_seater"
                            android:fontFamily="@font/googlesansbold"
                            android:text="@string/_1"
                            android:textAlignment="center"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_large" />

                        <ImageView
                            android:id="@+id/ivIncrease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/txt_todo"
                            android:padding="@dimen/spacing_xsmall"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp"
                            android:tint="@color/icon_color" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btnSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/bg_btn_shape"
                            android:contentDescription="@string/txt_todo"
                            android:fontFamily="@font/googlesansbold"
                            android:padding="@dimen/spacing_25sdp"
                            android:src="@drawable/ic_search_2_line" />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/layRecentSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvRecentSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/text_recent_search"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_large" />
                <TextView
                    android:id="@+id/tvClearSearchData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/circle_background"
                    android:text="@string/text_recent_search_clear"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentSearch"
                    android:layout_below="@+id/tvRecentSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="0dp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/txt_new_offers"
                    android:layout_weight="1"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_large" />

                <TextView
                    android:id="@+id/tvViewallNewOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/txt_view_all"
                    android:textColor="@color/textchild" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNewOffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingStart="@dimen/spacing_medium"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/spacing_medium" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

