<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:background="@color/app_background"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@drawable/bg_toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        android:theme="@style/Toolbar"
        app:contentInsetStart="0dp"
        app:titleTextColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/spacing_medium"
                android:src="@drawable/ic_left_arrow_white"
                android:contentDescription="@string/txt_todo"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_toEndOf="@+id/ivBack"
                android:fontFamily="@font/googlesansextrabold"
                android:text="@string/title_wallet"
                android:layout_toStartOf="@id/ivNotification"
                android:textColor="@color/white"
                android:textSize="@dimen/font_mlarge" />
            <include
                layout="@layout/layout_addnotification" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/bg_card"
        android:paddingBottom="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/ic_gr_wallet"
                        android:contentDescription="@string/txt_todo"/>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:orientation="vertical"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/googlesansbold"
                            android:text="@string/lbl_your_wallet_in_balance"
                            android:textColor="@color/textheader"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:id="@+id/tvWalletBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_medium"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center_vertical"
                            android:paddingTop="@dimen/spacing_medium"
                            android:paddingBottom="@dimen/spacing_medium"
                            android:text="₹0.0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_xlarge" />

                        <TextView
                            android:id="@+id/tvWalletHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/googlesansbold"
                            android:text="@string/lbl_wallet_history"
                            android:textColor="@color/colorPrimaryDark"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:textSize="@dimen/font_medium"
                            android:visibility="gone"/>


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:fontFamily="@font/googlesansbold"
                    android:text="Add Amount"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/textheader" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/edAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:hint="Enter Amount"
                        android:singleLine="true"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/bg_rounded_border_edittext"
                        android:textColor="@color/textheader"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="start"
                        android:fontFamily="@font/googlesansbold"
                        android:text="Recommended"
                        android:textSize="@dimen/font_medium"
                        android:textColor="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnAdd1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:backgroundTintMode="add"
                            android:backgroundTint="@null"
                            android:background="@drawable/bg_border"
                            android:text="₹100"
                            android:textSize="@dimen/font_msmall"
                            android:fontFamily="@font/googlesansbold"
                            android:textColor="@color/colorPrimaryDark" />

                        <Button
                            android:id="@+id/btnAdd2"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            app:backgroundTintMode="add"
                            android:backgroundTint="@null"
                            android:background="@drawable/bg_border"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center"
                            android:text="₹200"
                            android:textSize="@dimen/font_msmall"
                            android:textColor="@color/colorPrimaryDark" />

                        <Button
                            android:id="@+id/btnAdd3"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            app:backgroundTintMode="add"
                            android:backgroundTint="@null"
                            android:background="@drawable/bg_border"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center"
                            android:text="₹500"
                            android:textSize="@dimen/font_msmall"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAddMoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_shape"
                        android:fontFamily="@font/googlesansbold"
                        android:shadowColor="@color/blue"
                        android:text="Add"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_large" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesansbold"
                android:gravity="center"
                android:singleLine="true"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                android:hint="Payment Response"
                android:textColor="@color/textheader"
                android:textSize="@dimen/font_medium"
                android:visibility="gone"/>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesansbold"
                    android:gravity="center"
                    android:paddingTop="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_medium"
                    android:text="@string/lbl_wallet"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_large" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/viewheight"
                    android:layout_below="@+id/lbl_wallet"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:background="@color/view_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_medium">

                    <ImageView
                        android:id="@+id/ivFaceBook"
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:layout_margin="@dimen/spacing_medium"
                        android:contentDescription="@string/txt_todo"
                        android:src="@drawable/ic_facebook_fill" />

                    <ImageView
                        android:id="@+id/ivWhatsapp"
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:layout_margin="@dimen/spacing_medium"
                        android:contentDescription="@string/txt_todo"
                        android:src="@drawable/ic_whatsapp_fill" />

                    <ImageView
                        android:id="@+id/ivGoogle"
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:layout_margin="@dimen/spacing_medium"
                        android:contentDescription="@string/txt_todo"
                        android:src="@drawable/ic_google_fill"
                        android:tint="@color/red" />

                    <ImageView
                        android:id="@+id/ivTwitter"
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:layout_margin="@dimen/spacing_medium"
                        android:contentDescription="@string/txt_todo"
                        android:src="@drawable/ic_twitter" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</RelativeLayout>