<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="true"
    app:behavior_peekHeight="85dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:descendantFocusability="blocksDescendants">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBusRoutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            app:cardElevation="@dimen/card_shadow">

            <TextView
                android:id="@+id/lblContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:fontFamily="@font/googlesansbold"
                android:padding="@dimen/spacing_small"
                android:text="@string/text_bus_routes_info"
                android:textColor="@color/textheader"
                android:textSize="@dimen/font_large" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvBusRoutes"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/googlesansbold"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="11:10 AM"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/bg_circle"
                        android:src="@drawable/ic_baseline_circle_24" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="-2dp"
                        android:layout_below="@+id/imgDot"
                        android:layout_gravity="center"
                        android:background="@drawable/vertical_dotted_line"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_small"
                    android:text="Noida"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/googlesansbold"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="11:10 AM"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/bg_circle"
                        android:tint="@color/green"
                        android:src="@drawable/ic_baseline_circle_24" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="-2dp"
                        android:layout_below="@+id/imgDot"
                        android:layout_gravity="center"
                        android:background="@drawable/vertical_solid_line"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_small"
                    android:text="Noida"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/googlesansbold"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="11:10 AM"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/bg_circle"
                        android:tint="@color/green"
                        android:src="@drawable/ic_baseline_circle_24" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="-2dp"
                        android:layout_below="@+id/imgDot"
                        android:layout_gravity="center"
                        android:background="@drawable/vertical_solid_line"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_small"
                    android:text="Noida"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/googlesansbold"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="11:10 AM"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/bg_circle"
                        android:tint="@color/green"
                        android:src="@drawable/ic_baseline_circle_24" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="-2dp"
                        android:layout_below="@+id/imgDot"
                        android:layout_gravity="center"
                        android:background="@drawable/vertical_solid_line"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_small"
                    android:text="Noida"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/googlesansbold"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="11:10 AM"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/bg_circle"
                        android:tint="@color/green"
                        android:src="@drawable/ic_baseline_circle_24" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="-2dp"
                        android:layout_below="@+id/imgDot"
                        android:layout_gravity="center"
                        android:background="@drawable/vertical_solid_line"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_small"
                    android:text="Noida"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBusRoutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvBusRoutes"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>