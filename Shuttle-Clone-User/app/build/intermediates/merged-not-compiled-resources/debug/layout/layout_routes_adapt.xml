<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvBusRoutes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_medium"
    android:layout_marginEnd="@dimen/spacing_medium"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/spacing_small"
    app:cardElevation="@dimen/card_shadow">

    <LinearLayout
        android:id="@+id/llRoutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBus"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_medium"
            android:contentDescription="@string/txt_todo"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_routes"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvRouteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxLines="2"
            android:singleLine="false"
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_large"
            android:text="Ahmedabad(Guj)- High Hill,Manali Surat to Ahmedabad" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/spacing_small"
            android:contentDescription="@string/txt_todo"
            android:src="@drawable/ic_keyboard_arrow_grey"
            android:tint="@color/colorPrimary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

