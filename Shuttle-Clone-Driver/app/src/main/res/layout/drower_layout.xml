<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view"
    android:background="@color/colorPrimary"
    tools:viewBindingIgnore="true"
    android:fitsSystemWindows="true"
    android:layout_gravity="start"
    tools:openDrawer="start"
    android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_5sdp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/_30sdp"
                android:paddingBottom="@dimen/_20sdp">



                <!--<ImageView
                    android:id="@+id/drwClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="2dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                    android:background="@drawable/circle_background"
                    />-->

                <LinearLayout
                    android:id="@+id/my_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/drwimgUser"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="2dp"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_profile" />

                    <TextView
                        android:id="@+id/tvDrwName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:singleLine="true"
                        android:padding="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Driver Name"
                        android:textColor="@color/textheader"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvTotalEarn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:singleLine="true"
                        android:text="Total Eraning: â‚¹ 524"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/textcolor"
                        android:textSize="16dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/profile_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/my_profile_layout"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/profile_divider"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:drawableRight="@drawable/ic_profile_24"
                            android:drawablePadding="20dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center|left"
                            android:letterSpacing="0.025"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="12dp"
                            android:text="Profile"
                            android:textSize="17sp"
                            android:textColor="@color/textcolor" />

                        <TextView
                            android:id="@+id/tvShareAndEarn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:drawableRight="@drawable/ic_share_earn_24"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="20dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center|left"
                            android:letterSpacing="0.025"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="12dp"
                            android:textSize="17sp"
                            android:text="Share &amp; Earn"
                            android:textColor="@color/textcolor" />

                        <TextView
                            android:id="@+id/tvMyAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:drawableRight="@drawable/ic_manage_accounts_24"
                            android:drawablePadding="20dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center|left"
                            android:letterSpacing="0.025"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="12dp"
                            android:text="My Account"
                            android:textSize="17sp"
                            android:textColor="@color/textcolor" />


                        <TextView
                            android:id="@+id/tvSupport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="20dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center|left"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:drawableRight="@drawable/ic_support_agent_24"
                            android:letterSpacing="0.025"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="12dp"
                            android:text="Support"
                            android:textSize="17sp"
                            android:textColor="@color/textcolor" />


                        <TextView
                            android:id="@+id/tvLogout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:drawableRight="@drawable/ic_logout_24"
                            android:drawablePadding="20dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingRight="16dp"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:paddingBottom="12dp"
                            android:textSize="17sp"
                            android:text="Log out"
                            android:textColor="@color/textcolor" />

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/become_pilot_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nav_menu_item_select"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divider" />

                    <TextView
                        android:id="@+id/insuranceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="V 1.0"
                        android:textSize="@dimen/font_medium"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>


