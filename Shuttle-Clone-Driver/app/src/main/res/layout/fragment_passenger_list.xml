<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@drawable/bg_toolbar" />

    <LinearLayout
        android:id="@+id/rlCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:weightSum="1">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/spacing_small"
                app:cardElevation="@dimen/card_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/googlesansbold"
                        android:text="ACTIVE RIDE"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/font_large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_2sdp"
                                android:drawableLeft="@drawable/ic_baseline_directions_bus_24"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Shuttle"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/font_medium" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/googlesansbold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="000"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_large" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/view_header" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_2sdp"
                                android:drawableLeft="@drawable/ic_baseline_people_alt_24"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Passenger"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/font_medium" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/googlesansbold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="00"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_large" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/view_header"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_2sdp"
                                android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Current Time"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/font_medium" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/googlesansbold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="00:00 AM"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_large" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:gravity="center|left"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_dote"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/colorPrimaryDark"
                                android:fontFamily="@font/googlesansbold"
                                android:text="FROM"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_medium" />

                            <View
                                android:layout_width="@dimen/_8sdp"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@color/textheader" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:hint="ABC Sec 18"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_medium" />
                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center|left"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_dote"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/red"
                                android:fontFamily="@font/googlesansbold"
                                android:text="TO"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_medium" />

                            <View
                                android:layout_width="@dimen/_8sdp"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@color/textheader" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:hint="ABC Sec 64"
                                android:textColor="@color/textheader"
                                android:textSize="@dimen/font_medium" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvBusRoutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xsmall"
                app:cardCornerRadius="0dp"
                app:cardElevation="@dimen/card_shadow">

                <TextView
                    android:id="@+id/lblContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    android:fontFamily="@font/googlesansbold"
                    android:padding="@dimen/spacing_small"
                    android:text="@string/title_passenger_list"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_large" />

            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPassengerList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/layout_passenger_list_item"
                android:background="@drawable/bg_card"
                android:padding="@dimen/_5sdp"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
